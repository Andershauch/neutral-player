generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Eller "sqlite" hvis du tester lokalt uden Neon endnu
  url      = env("DATABASE_URL")
}

// --- NextAuth Models (Til login) ---
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  embeds        Embed[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Video Platform Models ---

model Embed {
  id          String   @id @default(cuid())
  name        String
  defaultLang String   @default("da") // Fx "da", "en", "de"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  groups      Group[]
}

model Group {
  id        String   @id @default(cuid())
  name      String
  
  // FØR: slug String @unique
  // NU: Vi fjerner @unique herfra:
  slug      String   
  
  embedId   String
  embed     Embed    @relation(fields: [embedId], references: [id], onDelete: Cascade)
  
  variants  Variant[]
  
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // OG TILFØJER DENNE LINJE I STEDET:
  // Det betyder: "Kombinationen af embedId og slug skal være unik"
  @@unique([embedId, slug])
}

model Variant {
  id             String   @id @default(cuid())
  
  groupId        String
  group          Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  lang           String
  muxUploadId    String?
  dreamBrokerUrl String?
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // TILFØJ DENNE LINJE:
  @@unique([groupId, lang])
}